@model Hotelroject.WebUI.Models.Setting.UserEditVİewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayouts.cshtml";
}

<h1>Profile Information and Update Password</h1>
<form method="post">
    <label>Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>User Name</label>
    <input type="text" class="form-control" asp-for="UserName" readonly />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Password</label>
    <input type="password" class="form-control" asp-for="Password" />
    <br />
    <label>Confirm Password</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Update Informations</button>
</form>
