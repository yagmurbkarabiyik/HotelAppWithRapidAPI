@model List<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayouts.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Testimonial Picture</th>
        <th>Testimonial Name</th>
        <th>Testimonial Title</th>
        <th>Delete</th>
        <th>Update</th>
        
      
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.TestimonialId</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="DeleteTestimonial/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-danger">Delete</a> </td>
            <td><a href="UpdateTestimonial/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-success">Update</a> </td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Details</a> </td>
        </tr>
    }
</table>

<a href="/Staffs/AddStaff/" class="btn btn-info">Add New Testimonial</a>

